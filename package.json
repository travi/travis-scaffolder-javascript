{
  "name": "@travi/travis-scaffolder-javascript",
  "description": "CI scaffolder for JavaScript projects on Travis",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "license": "MIT",
  "repository": "travi/travis-scaffolder-javascript",
  "bugs": "https://github.com/travi/travis-scaffolder-javascript/issues",
  "homepage": "https://npm.im/@travi/travis-scaffolder-javascript",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "clean": "rimraf lib/",
    "lint:js": "eslint . --cache",
    "lint:travis": "travis-lint .travis.yml",
    "lint:peer": "npm ls >/dev/null",
    "test": "npm-run-all --print-label build --parallel lint:* --parallel test:*",
    "test:unit:base": "mocha 'src/**/*-test.js'",
    "test:unit": "nyc run-s test:unit:base",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "prebuild": "run-s clean",
    "build": "run-s build:*",
    "build:js": "rollup -c",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib/"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/register": "7.10.1",
    "@travi/any": "2.0.9",
    "@travi/babel-preset": "3.0.22",
    "@travi/eslint-config": "1.0.35",
    "@travi/eslint-config-mocha": "1.0.8",
    "@travi/javascript-scaffolder": "10.22.2",
    "@travi/travis-lint": "1.0.1",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "codecov": "3.7.0",
    "commitlint-config-travi": "1.3.6",
    "cz-conventional-changelog": "3.2.0",
    "husky": "4.2.5",
    "mocha": "7.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "rimraf": "3.0.2",
    "rollup": "2.12.1",
    "sinon": "9.0.2"
  },
  "dependencies": {
    "write-yaml": "^1.0.0"
  },
  "peerDependencies": {
    "@travi/javascript-scaffolder": "^8.6.0 || ^9.0.0 || ^10.0.0"
  }
}
