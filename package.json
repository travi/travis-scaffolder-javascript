{
  "name": "@travi/travis-scaffoler-javascript",
  "description": "CI scaffolder for JavaScript projects on Travis",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "license": "MIT",
  "repository": "travi/travis-scaffoler-javascript",
  "bugs": "https://github.com/travi/travis-scaffoler-javascript/issues",
  "homepage": "https://npm.im/@travi/travis-scaffoler-javascript",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "clean": "rimraf lib/",
    "lint:js": "eslint . --cache",
    "lint:travis": "travis lint --exit-code --no-interactive",
    "test": "run-s lint:* test:*",
    "test:unit:base": "mocha --recursive test/unit",
    "test:unit": "nyc run-s test:unit:base",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build": "run-s clean build:*",
    "build:js": "rollup -c",
    "watch": "run-s 'build:js -- --watch'",
    "prepublishOnly": "run-s build",
    "greenkeeper:update-lockfile": "greenkeeper-lockfile-update",
    "greenkeeper:upload-lockfile": "greenkeeper-lockfile-upload"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@travi/eslint-config-travi": "^1.6.13",
    "babel-preset-travi": "^1.3.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.2",
    "commitlint-config-travi": "^1.2.30",
    "cz-conventional-changelog": "^2.1.0",
    "greenkeeper-lockfile": "^1.15.1",
    "husky": "^1.0.0-rc.8",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.59.4",
    "sinon": "^5.0.10"
  }
}
