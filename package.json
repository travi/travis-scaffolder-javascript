{
  "name": "@travi/travis-scaffolder-javascript",
  "description": "CI scaffolder for JavaScript projects on Travis",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "license": "MIT",
  "repository": "travi/travis-scaffolder-javascript",
  "bugs": "https://github.com/travi/travis-scaffolder-javascript/issues",
  "homepage": "https://npm.im/@travi/travis-scaffolder-javascript",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib/"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/register": "7.18.9",
    "@form8ion/javascript": "10.0.1",
    "@travi/any": "2.1.6",
    "@travi/babel-preset": "3.0.96",
    "@travi/eslint-config": "3.0.12",
    "@travi/eslint-config-mocha": "1.0.19",
    "c8": "7.12.0",
    "chai": "4.3.7",
    "chai-as-promised": "7.1.1",
    "commitlint-config-travi": "1.4.19",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.1",
    "mocha": "10.1.0",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "rollup": "3.2.5",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "14.0.2"
  },
  "dependencies": {
    "@form8ion/javascript-core": "^8.0.0",
    "write-yaml": "^1.0.0"
  },
  "peerDependencies": {
    "@form8ion/javascript": ">=2.0.0"
  },
  "scripts": {
    "clean": "rimraf lib/",
    "lint:js": "eslint . --cache",
    "lint:peer": "npm ls >/dev/null",
    "test": "npm-run-all --print-label build --parallel lint:* --parallel test:*",
    "test:unit:base": "mocha 'src/**/*-test.js'",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "prebuild": "run-s clean",
    "build": "run-s build:*",
    "build:js": "rollup -c",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "prepare": "husky install"
  }
}
